@model List<Category>
<div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Add New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Category Order</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(o => o.CategoryOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.CategoryOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
       
    </tbody>   
</table>
</div>