@page
@model E_BookWebRazor_Temp.Pages.Categories.DeleteModel


<form method="post">
    <input asp-for="pCats.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="pCats.Name" class="p-0"></label>
            <input asp-for="pCats.Name" class="form-control" />
            <span asp-validation-for="pCats.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="pCats.CategoryOrder" class="p-0"></label>
            <input asp-for="pCats.CategoryOrder" class="form-control" />
            <span asp-validation-for="pCats.CategoryOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" asp-page="/categories/delete" class="btn btn-danger" style="width:150px"> Delete </button>
            </div>
            <div class="col-6 col-md-3">
                <button asp-page="/categories/index" class="btn btn-outline-secondary">Back To List</button>
            </div>
        </div>
    </div>
</form>
